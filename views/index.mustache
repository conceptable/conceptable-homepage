<!DOCTYPE HTML>
<html>
	<head>
		<title>Conceptable</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="stylesheet" href="assets/css/home.css" />
	</head>
	<body>

		<!-- Header -->
			<header id="header">
				<div class="inner">
					<div class="logo"><img src="images/conceptable_logo.png"></div>
				</div>
			</header>

		<!-- Banner -->
			<section id="banner">
				<div class="inner">
					<header class="mission-statement">
						{{ &mission_statement }}
					</header>
					<div class="flex service-items">
						<div class="service-item">{{ &service_first }}</div>
						<div class="service-item">{{ &service_second }}</div>
						<div class="service-item">{{ &service_third }}</div>
					</div>
				</div>
			</section>

		<!-- Three -->
			<section id="three" class="wrapper align-center customers">
				<div class="inner">
					<div class="flex flex-2">
						<article class="customer">{{ &customer_next_digital }}</article>
						<article class="customer">{{ &customer_eat_and_travel }}</article>
						<article class="customer">{{ &customer_etpress }}</article>
						<article class="customer">{{ &customer_gammon }}</article>
					</div>
				</div>
			</section>

			<!-- Four -->
			<section id="four" class="wrapper align-center">
				<div class="inner">
					<div class="flex flex-2">
						<article>
							<div class="image round">
								<img src="images/weather.jpg" alt="Hong Kong Weather" />
							</div>
							<header>
								{{ &product_hk_weather_title }}
							</header>
							  {{ &product_hk_weather_description }}
							<footer>
								<a href="https://itunes.apple.com/hk/app/hong-kong-weather/id286262858?l=en&mt=8" class="button">Download App</a>
							</footer>
						</article>
					</div>
				</div>
			</section>

		<!-- Footer -->
			<footer id="footer">
				<div class="inner">

					<h3>Get in touch</h3>

					<form action="#" method="post">

						<div class="field half first">
							<label for="name">Name</label>
							<input name="name" id="name" type="text" placeholder="Name">
						</div>
						<div class="field half">
							<label for="email">Email</label>
							<input name="email" id="email" type="email" placeholder="Email">
						</div>
						<div class="field">
							<label for="message">Message</label>
							<textarea name="message" id="message" rows="6" placeholder="Message"></textarea>
						</div>
						<ul class="actions">
							<li><input value="Send Message" class="button alt" type="submit"></li>
						</ul>
					</form>

					<div class="copyright">
						&copy; Conceptable 2018
					</div>

				</div>
			</footer>

		<!-- Scripts -->
			<script src="assets/js/jquery.min.js"></script>
			<script src="assets/js/skel.min.js"></script>
			<script src="assets/js/util.js"></script>
			<script src="assets/js/main.js"></script>

	</body>
</html>